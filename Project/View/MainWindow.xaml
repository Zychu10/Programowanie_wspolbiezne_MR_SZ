<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        Title="BouncingBalls" Height="600" Width="800" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid Background="LightSkyBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="60*" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0"
                   Background="CornflowerBlue">
            <DockPanel DockPanel.Dock="Top">
                <TextBlock Text="Number of balls" Padding="10" />
                <TextBox Name="BallsCount"
                         Text="{Binding BallsCount}"
                         TextAlignment="Center"
                         VerticalContentAlignment="Center"
                         TextWrapping="Wrap" Width="60"/>
            </DockPanel>
            <Button Name="AddBallsButton"
                    Content="Add balls"
                    VerticalAlignment="Top"
                    Padding="20" 
                    Command="{Binding AddBallsCommand}"/>
        </DockPanel>
        <Border BorderThickness="4"
                Grid.Column="1"
                BorderBrush="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="508"
                Height="508">
            <ItemsControl ItemsSource="{Binding Balls}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Name="BallSpace"
                                Background="White"
                                Width="500"
                                Height="500"
                                Grid.Column="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding X}" />
                        <Setter Property="Canvas.Top" Value="{Binding Y}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Path Fill="DarkBlue">
                            <Path.Data>
                                <EllipseGeometry RadiusX="{Binding Radius}" RadiusY="{Binding Radius}" />
                            </Path.Data>
                        </Path>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</Window>
